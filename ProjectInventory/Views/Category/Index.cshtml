@model System.Collections.Generic.List<ProjectInventory.Entities.Category>

@{
    ViewBag.Title = "Category List";
    Layout = "_Layout";
}
<div class="d-flex justify-content-end">
    <a asp-action="Create" class="btn btn-primary">Add New Item</a>
</div>
<table class="table table-striped table-responsive table-bordered">
    <thead class="bg-dark text-white text-center">
    <tr>
        <th>Category Name</th>
        <th>Category Description</th>
        <th>IsActive</th>
        <th>Action</th>
    </tr>
    </thead>
    @if(!Model.Any())
    {
        <tr>
            <td colspan="8" class="text-danger">No StakeHolders Found</td>
        </tr>
    }
    <tbody class="text-center">
    @foreach (var items in Model)
    {
        <tr>
            <td>@items.Name</td>
            <td>@items.Description</td>
            <td>
                @if(items.IsActive){
                <span>Active</span>
                }
                else{
                <span>InActive</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@items.Id" class="btn btn-secondary">Edit</a>
                <a asp-action="Remove" asp-route-id="@items.Id" class="btn btn-secondary">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>