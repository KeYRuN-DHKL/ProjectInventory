@model CategoryEditVm

@{
    ViewBag.Title = "CategoryItem Update";
    Layout = "_Layout";
}

<h2>CategoryItem Update</h2>
<form asp-action="Edit" method="Post">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" required/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input type="text" asp-for="Description" class="form-control"/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive">IsActive</label>
        <input type="checkbox" asp-for="IsActive" class="form-check-input"/>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <br/>
    <button type="submit" asp-action="Edit" class="btn btn-primary">Update</button>
</form>