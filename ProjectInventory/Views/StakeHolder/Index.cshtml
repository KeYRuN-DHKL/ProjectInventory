@model System.Collections.Generic.List<ProjectInventory.Entities.StakeHolder>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="d-flex justify-content-end pb-2">
    <a asp-action="Create" class="btn btn-primary">Add New Item</a>
</div>
<div asp-validation-summary="All" class="text-danger mb-3"></div>
<table class="table table-striped table-bordered table-responsive">
    <thead class="bg-success text-white text-center">
    <tr>
        <th>Full Name</th>
        <th>Vat Number</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>Email</th>
        <th>Type</th>
        <th>Status</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody class="text-center">
    @if(!Model.Any())
    {
        <tr>
            <td colspan="8" class="text-danger">No StakeHolders Found</td>
        </tr>
    }
    else
    {
        @foreach (var items in Model)
        {
            <tr>
                <td>@items.Name</td>
                <td>@items.VatNo</td>
                <td>@items.Address</td>
                <td>@items.PhoneNumber</td>
                <td>@items.Email</td>
                <td>@items.Type</td>
                <td>
                    @if (items.IsActive)
                    {
                        <span>Active</span>
                    }
                    else
                    {
                        <span>InActive</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@items.Id" class="btn btn-secondary">Edit</a>
                    <a asp-action="Remove" asp-route-id="@items.Id" class="btn btn-secondary">Remove</a>
                </td>
            </tr>
        } 
    }
    </tbody>
</table>
