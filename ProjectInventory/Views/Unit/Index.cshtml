@model System.Collections.Generic.List<ProjectInventory.Entities.Unit>

@{
    ViewBag.Title = "Unit";
    Layout = "_Layout";
}

<div class="d-flex justify-content-end pb-2">
    <a asp-action="Create" class="btn btn-primary">Add New Item</a>
</div>
<table class="table table-striped table-bordered table-responsive">
    <thead class="bg-success text-white text-center">
    <tr>
        <th>Unit Name</th>
        <th>Unit ShortName</th>
        <th>Unit Description</th>
        <th>IsActive</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody class="text-center">
    @foreach (var items in Model)
    {
        <tr>
            <td>@items.Name</td>
            <td>@items.Symbol</td>
            <td>@items.Description</td>
            <td>
                @if(items.IsActive){
                    <span>Active</span>
                }
                else{
                    <span>InActive</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@items.Id" class="btn btn-secondary">Edit</a>
                <Form asp-action="Remove" asp-route-id="@items.Id" method="Post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-secondary">Delete</button>
                </Form>
            </td>
        </tr>
    }
    </tbody>
</table>