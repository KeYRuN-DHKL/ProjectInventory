@model System.Collections.Generic.List<ProjectInventory.Entities.Product>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="d-flex justify-content-end">
    <a class="btn btn-primary" asp-action="Create">Add New Item</a>
</div>
<table class="table table-striped table-responsive table-bordered">
    <thead class="bg-dark text-white text-center">
    <th>Product Name</th>
    <th>Code</th>
    <th>Price</th>
    <th>Unit</th>
    <th>Category</th>
    <th>Description</th>
    <th>Status</th>
    <th>Action</th>
    </thead>
    <tbody class="text-center">
    @if (!Model.Any())
    {
        <tr>
            <td colspan="8" class="text-danger text-center">No Items Found</td>  
        </tr>
    }
    else
    {
        @foreach (var items in Model)
        {
            <tr>
                <td>@items.Name</td>
                <td>@items.Code</td>
                <td>@items.CostPrice</td>
                <td>@items.Unit.Name</td>
                <td>@items.Category.Name</td>
                <td>@items.Description</td>
                <td>
                    @if (@items.IsActive)
                    {
                        <span class="btn btn-primary">Active</span>
                    }
                    else
                    {
                        <span class="btn btn-danger">InActive</span>
                    }
                </td>
                <td>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@items.Id">Edit</a>
                    <Form class="d-inline">
                        @Html.AntiForgeryToken()
                        <a class="btn btn-secondary" asp-action="Remove" asp-route-id="@items.Id">Remove</a>
                    </Form>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
